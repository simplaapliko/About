<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/ad_dialog_horizontal_padding"
    android:paddingRight="@dimen/ad_dialog_horizontal_padding"
    android:paddingTop="@dimen/ad_dialog_vertical_padding"
    android:paddingBottom="@dimen/ad_dialog_vertical_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ad_dialog_element_vertical_padding">

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                style="@style/ad_AppTheme.TextView.Medium"
                android:id="@+id/app_name" />

            <TextView
                style="@style/ad_AppTheme.TextView.Small"
                android:id="@+id/app_version" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/developer_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ad_dialog_element_vertical_padding"
            android:paddingBottom="@dimen/ad_dialog_element_vertical_padding">

            <TextView
                style="@style/ad_AppTheme.TextView.Small"
                android:text="@string/ad_fragment_about_developed_by" />

            <TextView
                style="@style/ad_AppTheme.TextView.Small"
                android:id="@+id/developer" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedback_email_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ad_dialog_element_vertical_padding"
            android:paddingBottom="@dimen/ad_dialog_element_vertical_padding">

            <TextView
                style="@style/ad_AppTheme.TextView.Small"
                android:maxLines="3"
                android:text="@string/ad_fragment_about_feedback" />

            <TextView
                style="@style/ad_AppTheme.TextView.Small"
                android:id="@+id/feedback_email"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_from_developer_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ad_dialog_element_vertical_padding"
            android:paddingBottom="@dimen/ad_dialog_element_vertical_padding">

            <TextView
                android:id="@+id/more_from_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@mipmap/ad_ic_google_play_grey600_24dp_about_dialog"
                android:drawableEnd="@mipmap/ad_ic_google_play_grey600_24dp_about_dialog"
                android:drawablePadding="8dp"
                android:text="@string/ad_fragment_about_more_from_developer"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:maxLines="3" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
